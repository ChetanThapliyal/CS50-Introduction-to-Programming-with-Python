{
    "name": "Revising Python",
    "image": "aiml-base:latest",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.13" // Specify the Python version you want
        }
    },
    "postCreateCommand": "pip install uv && uv init && uv pip install --system jupyter ipykernel notebook matplotlib pandas pytest requests numpy cline",
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind"
    ],
    "forwardPorts": [8888],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter",
                "ms-toolsai.jupyter",
                "ms-python.isort",
                "ms-python.vscode-pylance",
                "ms-python.flake8",
                "ms-python.pylint",
                "ms-python.vscode-pytest"
            ]
        }
    },
    "remoteUser": "vscode"
}
